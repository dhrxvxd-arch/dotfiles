#!/bin/sh

# Prints the current volume or "muted" if muted.

case $BLOCK_BUTTON in
    1) setsid -w -f "$TERMINAL" -e pulsemixer; pkill -RTMIN+10 "${STATUSBAR:-dwmblocks}" ;;
    2) wpctl set-mute @DEFAULT_SINK@ toggle ;;
    4) wpctl set-volume @DEFAULT_SINK@ 1%+ ;;
    5) wpctl set-volume @DEFAULT_SINK@ 1%- ;;
    3) notify-send "Volume module" "\
- Shows volume as a percentage
- Middle click to mute
- Scroll to change" ;;
    6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@)"

# If muted, print "muted" and exit.
[ "$vol" != "${vol%\[MUTED\]}" ] && echo "muted" && exit

vol="${vol#Volume: }"

split() {
    # For omitting the . without calling an external program.
    IFS=$2
    set -- $1
    printf '%s' "$@"
}

vol="$(printf "%.0f" "$(split "$vol" ".")")"

echo "$vol%"

