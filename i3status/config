
general {
	colors = false
        interval = 1
}

order += "wireless _first_"
order += "battery all"
order += "disk /"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "%quality -> %essid"
        format_down = "down"
}

battery all {
        format = "%percentage -> BAT"
}

memory {
        format = "%used / %available -> MEM"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%Y-%m-%d %I:%M %p -> ASIA"
}
